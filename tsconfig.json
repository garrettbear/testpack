{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es2020",
    "jsx": "react",
    "paths": {
      "metachak": ["../metachak"]
    }
  },
  "exclude": ["./dist"],
  "include": ["src", "../metachak"]
}
